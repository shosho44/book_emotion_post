<% if @has_user_logged_in %>
<div class="block mr-0.5 ml-auto my-2.5 w-3/12">
  <%= form_with(model: @passage, url: {controller: 'passages', action: 'create', user_id: @current_user.id}, local: true, class: "w-full") do |f| %>
  <div class="m-auto w-11/12">
    <%= f.text_area :content, placeholder: "感動した文章", class: "rounded-lg bg-gray-100 h-96 mt-2.5 py-1.5 pl-1.5 break-all w-full" %>

    <%= f.text_area :book_title, placeholder: "本のタイトル", class: "rounded-lg bg-gray-100 mt-2.5 py-1.5 pl-1.5 w-full"%>

    <%= f.submit "投稿する", class: "hover:text-gray-400 mt-2.5" %>
  </div>
  <% end %>
</div>
<% end %>